@model WSFrameworkFrontend.Models.OrderProductViewModel

@{
    ViewBag.Title = "Details";
}
<div class="container body-content" style="background:white">

    <h2>Order Details</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CustomerId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CustomerId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ShippingAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ShippingAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BillingAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BillingAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>

            <dd>
            @if (Model.Status == 0)
            {
                    @: Pending
            }
            else if (Model.Status == 1)
            {
                    @: Completed
            }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Amount)
            </dt>

            <dd>
                $@Html.DisplayFor(model => model.Amount)
            </dd>

        </dl>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Quantity)
                </th>
                <th>
                    Total Price
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        $@(item.Price * item.Quantity)
                    </td>
                    <td>
                        <a href="~/Product/Details/@item.Id">Product Details</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <hr />

    <p>
        @Html.ActionLink("Edit Order", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to Orders", "Browse")
    </p>
</div>