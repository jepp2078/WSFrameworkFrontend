@model WSFrameworkFrontend.Models.ProductCreateViewModel

@{
    ViewBag.Title = "Success";
}
<div class="container body-content" style="background:white">
    <h2>Success</h2>
    <div>
        <hr />

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DescriptionFull)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DescriptionFull)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Views)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Views)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @if (Model.IsActive == 0)
                {
                    @: Invisible
                }
                else if (Model.IsActive == 1)
                {
                    @: Visible
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Stock)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Stock)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Image)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Image.ImageUrl)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>

            <dd>
               @for (int i = 0; i < Model.CategoryName.Count; i++)
               {
                @Html.DisplayFor(model => model.CategoryName[i])
                <br />
               }
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Create New Product", "Create")
        <br />
        @Html.ActionLink("View Your Products", "Browse")
</div>