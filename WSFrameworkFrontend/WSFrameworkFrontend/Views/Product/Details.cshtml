@model WSFrameworkFrontend.Models.ProductCreateViewModel

@{
    ViewBag.Title = @Html.DisplayFor(model => model.Title);
}
<div class="container body-content" style="background:white">
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src=@Html.DisplayFor(model => model.Image.ImageUrl) alt=@Html.DisplayFor(model => model.Title) style="width:500px;height: auto;">
            </div>
            <div class="col-md-6">
                <h1>@Html.DisplayFor(model => model.Title)</h1>
                <b><i>Categories:</i></b>
                @for (int i = 0; i < Model.CategoryName.Count; i++)
                {
                    if (i == Model.CategoryName.Count - 1)
                    {
                        <i>@Html.DisplayFor(model => model.CategoryName[i])</i>
                    }
                    else
                    {
                        <i>@Html.DisplayFor(model => model.CategoryName[i]),</i>
                    }
                }
                <hr />

                <h3>@Html.DisplayFor(model => model.Price)</h3>
                <i>Stock: @Html.DisplayFor(model => model.Stock) pcs.</i>
                <hr />

                <b>Description</b>
                <br />
                @Html.DisplayFor(model => model.Description)
                <br />
                <br />
                <b>Details</b>
                <br />
                @Html.DisplayFor(model => model.DescriptionFull)
                <hr />

                <div class="col-md-3">
                    <b>Views</b>
                    <br />
                    @Html.DisplayFor(model => model.Views)
                </div>

                <div class="col-md-3">
                    <b>Visibility</b>
                    <br />
                    @if (Model.IsActive == 0)
                    {
                        @: Invisible
                    }
                    else if (Model.IsActive == 1)
                    {
                        @: Visible
                    }
                </div>

                <div class="col-md-3">
                    <b>Created</b>
                    <br />
                    @Html.DisplayFor(model => model.CreatedAt)
                </div>

                <div class="col-md-3">
                    <b>Updated</b>
                    <br />
                    @Html.DisplayFor(model => model.UpdatedAt)
                </div>
            </div>
        </div>
        <hr />
        <p style="text-align:center">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back To Your Products", "Browse")
        </p>
    </div>
</div>
