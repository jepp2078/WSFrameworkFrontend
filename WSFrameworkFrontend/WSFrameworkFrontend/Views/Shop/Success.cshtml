@model WSFrameworkFrontend.Models.ShopModel

@{
    ViewBag.Title = "Success";
}
<div class="container body-content" style="background:white">
    <h2>Success</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DescriptionFull)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DescriptionFull)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @if(Model.IsActive == 0)
                {
                    @Html.DisplayText("Invisible");
                }
                else
                {
                    @Html.DisplayText("Visible");
                }
            </dd>
        </dl>
    </div>
</div>
