@model WSFrameworkFrontend.Models.ShopProductViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jscolor.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
</head>
<body style="background-color:#@Model.Configuration.BgColor">
    <div class="navbar navbar-inverse navbar-fixed-top sticky" role="navigation" style="border-color:#@Model.Configuration.MenuColor; background-color:#@Model.Configuration.MenuColor; max-height: 50px;">
        <div class="container">
            <div class="navbar-header">
                <label class="navbar-brand navbar-title" style="float:none;color:#@Model.Configuration.MenuTextColor;">@Model.Title</label>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li><a style="color:#@Model.Configuration.MenuTextColor;" href="#">Go to Cart(0)</a></li>
                    <li><a style="color:#@Model.Configuration.MenuTextColor;" href="#">Checkout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <div class="container body-content" style="background:white">
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src=@Html.DisplayFor(model => model.Image.ImageUrl) alt=@Html.DisplayFor(model => model.Title) style="width:500px; height:auto;">
                </div>
                <div class="col-md-6">
                    <h1>@Html.DisplayFor(model => model.Title)</h1>
                    <b><i>Categories:</i></b>
                    @for (int i = 0; i < Model.CategoryName.Count; i++)
                    {
                        if (i == Model.CategoryName.Count - 1)
                        {
                            <i>@Html.DisplayFor(model => model.CategoryName[i])</i>
                        }
                        else
                        {
                            <i>@Html.DisplayFor(model => model.CategoryName[i]),</i>
                        }
                    }
                    <hr />

                    <h3>@Html.DisplayFor(model => model.Price)</h3>
                    <i>Stock: @Html.DisplayFor(model => model.Stock) pcs.</i>
                    <hr />

                    <b>Description</b>
                    <br />
                    @Html.DisplayFor(model => model.Description)
                    <br />
                    <br />
                    <b>Details</b>
                    <br />
                    @Html.DisplayFor(model => model.DescriptionFull)
                    <hr />

                    <div class="col-md-4">
                        <b>Views</b>
                        <br />
                        @Html.DisplayFor(model => model.Views)
                    </div>

                    <div class="col-md-4">
                        <b>Created</b>
                        <br />
                        @Html.DisplayFor(model => model.CreatedAt)
                    </div>

                    <div class="col-md-4">
                        <b>Updated</b>
                        <br />
                        @Html.DisplayFor(model => model.UpdatedAt)
                    </div>
                </div>
            </div>
            <hr />
            <p style="text-align:center">
                <a href="/Shop/ViewShop/@Model.ShopId">Go to Webshop</a>
            </p>
        </div>
    </div>
</body>
</html>
