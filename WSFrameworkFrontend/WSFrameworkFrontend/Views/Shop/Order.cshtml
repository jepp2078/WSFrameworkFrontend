@model WSFrameworkFrontend.Models.OrderModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Complete</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jscolor.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
</head>
<body style="background-color:#@ViewBag.BgColor">
    <div class="navbar navbar-inverse navbar-fixed-top sticky" role="navigation" style="border-color:#@ViewBag.MenuColor; background-color:#@ViewBag.MenuColor; max-height: 50px;">
        <div class="container">
            <div class="navbar-header">
                <label class="navbar-brand navbar-title" style="float:none;color:#@ViewBag.MenuTextColor;">Your Cart</label>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li><a style="color:#@ViewBag.MenuTextColor;" href="/Shop/ViewCart">Cart(@ViewBag.ProductsInCart)</a></li>
                    <li><a style="color:#@ViewBag.MenuTextColor;" href="/Shop/Customer/@ViewBag.ShopId">Checkout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <div class="container body-content" style="background:white">
        <hr />
        <div>
            <h4>Order Complete!</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ShippingAddress)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ShippingAddress)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>

                <dd>
                    Pending
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>

                <dd>
                    $@Html.DisplayFor(model => model.Amount)
                </dd>

            </dl>
        </div>
        <hr />
        <p style="text-align:center">
            <a href="/Shop/ViewShop/@Model.ShopId">Go to Webshop</a>
        </p>
    </div>
</body>
</html>
