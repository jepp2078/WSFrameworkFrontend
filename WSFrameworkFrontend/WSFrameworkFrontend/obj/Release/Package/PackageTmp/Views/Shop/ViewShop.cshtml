                                    }
                                }
                                <hr />

                                <h3>$@product.Price</h3>
                                <i>Stock: @product.Stock pcs.</i>
                                <hr />

                                <b>Description</b>
                                <br />
                                @product.Description
                                <br />
                                <br />
                                <b>Details</b>
                                <br />
                                @product.DescriptionFull
                            </div>
                        </div>
                        <hr />
                    }

                    break;

                default:
                    foreach (var product in Model.Products)
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <img src=@product.Image.ImageUrl style="width:270px; height:auto;">
                                <br />
                                <div class="input-group" style="min-width: 270px;">
                                    <input type="number" id=@product.Id class="form-control" min="0" max=@product.Stock value="0">
                                    <span class="input-group-btn">
                                        <button type="button" onclick="addToCart('@product.Id')" class="btn btn-success">Add to Cart</button>
                                        <a href="/Shop/ViewShopProduct/@product.Id" class="btn btn-default" role="button">View Details</a>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <h2>@product.Title</h2>
                                <b><i>Categories:</i></b>
                                @for (int i = 0; i < product.CategoryName.Count; i++)
                                {
                                    if (i == product.CategoryName.Count - 1)
                                    {
                                        <i>@product.CategoryName[i]</i>
                                    }
                                    else
                                    {
                                        <i>@product.CategoryName[i],</i>
                                    }
                                }
                                <hr />

                                <h3>$@product.Price</h3>
                                <i>Stock: @product.Stock pcs.</i>
                                <hr />

                                <b>Description</b>
                                <br />
                                @product.Description
                                <br />
                                <br />
                                <b>Details</b>
                                <br />
                                @product.DescriptionFull
                            </div>
                        </div>
                        <hr />
                    }
                    break;
            }
            
        </div>
        <footer style="text-align:center">
            <i>@Model.Title | Last updated @Model.UpdatedAt</i>
            <hr />
            
        </footer>
    </div>
    <script type="text/javascript">
        function addToCart(clicked_id) {
            var amount = document.getElementById(clicked_id).value;
            if (amount != 0) {
                $.post("/Shop/AddProductToCart", { "id": clicked_id, "amount": amount}
                    , function (data) {
                        document.getElementById("cartAmount").innerHTML = "Cart(" + data + ")";
                    });
            }
        }
    </script>
</body>
</html>